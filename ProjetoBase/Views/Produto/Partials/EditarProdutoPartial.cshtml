@model ProjetoBase.ViewModels.EditarProdutoViewModel


<div class="form-group">
    @Html.LabelFor(model => model.Nome)
    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Preco)
    @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.FornecedorId)
    @Html.DropDownListFor(
                    m => m.FornecedorId,
                    Model.FornecedorOpcao,
                    "Selecione uma Opção...")

</div>


