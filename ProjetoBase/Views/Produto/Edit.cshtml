@model ProjetoBase.ViewModels.EditarProdutoViewModel


@{
    ViewBag.Title = "Editando Novo Produto...";
}

<h2>Novo Produto</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)

    @Html.Partial("Partials/EditarProdutoPartial", Model)
    <button type="submit" class="btn btn-default">Salvar</button>
}